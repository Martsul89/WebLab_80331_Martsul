@model IEnumerable<LR1Project.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}

<h1>Ваша корзина</h1>
<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label>@item.Flower.FlowerName</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a class="btn btn-outline-danger"
                       asp-action="delete" asp-controller="Cart" asp-route-id="@item.Flower.FlowerId"><i class="fa fa-eraser"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>